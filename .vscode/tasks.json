{
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceFolder}/make2/build"
    },
    "tasks": [
        {
            "type": "shell",
            "label": "Cmake",
            "command": "cmake",
            "args": [
                ".."
            ]
        },
        {
            "label": "Make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make",
            "args": []
        },
        {
            "label": "Build",
            "dependsOrder": "sequence", // 按列出的顺序执行任务依赖项
            "dependsOn": [
                "Cmake",
                "Make"
            ]
        }
    ]
}